---
// Astro Components
import { Image } from "astro:assets";

// Components
import Button from "./Button.astro";

interface Props {
  title: string;
  description: string;
  date: string;
  signUpURL: string;
  thumbnail: string;
  color: string;
  ctaDisabled: boolean;
}

const { title, description, date, signUpURL, thumbnail, color, ctaDisabled } =
  Astro.props;

const [eventDate, time] = date.split(", ");
---

<article class="card">
  <Image
    src={thumbnail}
    alt="Ilustración gráfica con el logo respectivo para la charla"
    inferSize
  />
  <div class="p-6">
    <h3 class="text-title mb-6">{title}</h3>
    {
      eventDate != "Invalid Date" && (
        <p class="text-label card__label">{eventDate}</p>
      )
    }

    {!ctaDisabled && <p class="text-label card__label mt-4">{time}</p>}

    <p class="my-10">{description}</p>
    {
      ctaDisabled ? (
        <Button
          text="Pronto"
          type="full-width"
          href={signUpURL}
          backgroundColor="#4B4E53"
          disabled
        />
      ) : (
        <Button
          text="Inscribirse"
          type="full-width"
          href={signUpURL}
          backgroundColor={color}
          targetBlank
        />
      )
    }
  </div>
</article>

<style>
  .card {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    max-width: 360px;
    width: 100%;
    background-color: var(--primary-color);
    color: var(--secondary-color);
  }
</style>
