---
import { Image } from "astro:assets";

import "@/styles/main.css";

import Header from "@/components/Header.astro";

import arrow from "@/assets/arrow-up.png";
import footerImage from "@/assets/curve_text.png";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Golos+Text:wght@400..900&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="text-body">
    <Header />
    <slot />
    <footer class="w-full px-4">
      <a href="#talks" class="w-full">
        <div
          class="content-layout relative flex flex-col items-center justify-center"
        >
          <div class="flex w-full items-center justify-center gap-8">
            <div class="divider max-w-sm bg-secondary"></div>
            <Image
              class="rotate w-1/2 max-w-40 md:w-full"
              src={footerImage}
              alt="Las palabras ParchaTech y 2024 formando un círculo"
            />
            <div class="divider max-w-sm bg-secondary"></div>
          </div>
          <Image
            src={arrow}
            alt="Flecha apuntando hacía arriba"
            class="bounce absolute"
          />
        </div>
      </a>
    </footer>
  </body>
</html>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    scroll-behavior: smooth;
  }

  body {
    min-height: 100vh;
    background-color: var(--secondary-color);
    user-select: none;
  }

  footer {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 42px 0;
    background-color: var(--primary-color);
    color: var(--secondary-color);
  }

  .bounce {
    animation: bouncing 1.5s ease-in-out infinite;
  }

  @keyframes bouncing {
    0%,
    100% {
      transform: translateY(10%);
    }

    50% {
      transform: translateY(-10%);
    }
  }

  .rotate {
    animation: rotateClockwise 8s linear infinite;
  }

  @keyframes rotateClockwise {
    0% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(360deg);
    }
  }
</style>
